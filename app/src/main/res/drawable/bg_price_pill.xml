<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradiente de fondo -->
    <item>
        <shape>
            <gradient
                android:angle="0"
                android:startColor="@color/price_pill_start"
                android:endColor="@color/price_pill_end"
                android:type="linear" />
            <corners android:radius="@dimen/price_pill_corner_radius" />
        </shape>
    </item>

    <!-- Borde sutil -->
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#0AFFFFFF" />
            <corners android:radius="@dimen/price_pill_corner_radius" />
        </shape>
    </item>

</layer-list>