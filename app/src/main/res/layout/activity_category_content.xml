<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_home">

    <!-- Header con botÃ³n de regresar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:paddingTop="48dp">

        <!-- BotÃ³n volver -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:backgroundTint="#334155"
            app:cornerRadius="12dp" />

        <!-- TÃ­tulo de categorÃ­a -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Streaming"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_category_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 servicios disponibles"
                android:textColor="#94A3B8"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Icono de categorÃ­a -->
        <TextView
            android:id="@+id/tv_category_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:text="ðŸ“º"
            android:textSize="32sp"
            android:gravity="center"
            android:background="@drawable/rounded_circle" />

    </LinearLayout>

    <!-- Grid de servicios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_category_services"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false" />

</LinearLayout>