<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_gradient_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_arrow_back"
                    app:iconTint="@color/white"
                    app:backgroundTint="@color/dark_card_background"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/purple_accent"
                    app:strokeWidth="2dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nueva Categor칤a"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

            </LinearLayout>

            <!-- Card principal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/dark_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- ID de la categor칤a -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID de la categor칤a"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/et_category_id"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/input_bg"
                        android:hint="ej: streaming, music, design"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_secondary"
                        android:paddingHorizontal="16dp"
                        android:inputType="text"
                        android:layout_marginBottom="16dp" />

                    <!-- Nombre -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/et_category_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/input_bg"
                        android:hint="ej: Streaming"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_secondary"
                        android:paddingHorizontal="16dp"
                        android:inputType="text"
                        android:layout_marginBottom="16dp" />

                    <!-- Descripci칩n -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descripci칩n"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/et_category_description"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/input_bg"
                        android:hint="ej: Netflix, Disney+, Max y m치s"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_secondary"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:layout_marginBottom="16dp" />

                    <!-- Selector de emoji -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Icono"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tv_selected_emoji"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:text="游닍"
                            android:textSize="40sp"
                            android:gravity="center"
                            android:background="@drawable/rounded_circle"
                            android:backgroundTint="@color/purple_accent"
                            android:layout_marginEnd="16dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_select_emoji"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Seleccionar Emoji"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/input_background"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                    <!-- Colores del gradiente -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Colores del gradiente"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <!-- Color inicial -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color inicial"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginBottom="6dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/view_start_color_preview"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="#8B5CF6"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:background="@drawable/rounded_circle"
                            android:layout_marginEnd="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_select_start_color"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Seleccionar Color"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/input_background"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                    <!-- Color final -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color final"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:layout_marginBottom="6dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/view_end_color_preview"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="#6D28D9"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:background="@drawable/rounded_circle"
                            android:layout_marginEnd="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_select_end_color"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Seleccionar Color"
                            android:textColor="@color/white"
                            app:backgroundTint="@color/input_background"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Botones de acci칩n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/btn_cancel_category"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:text="Cancelar"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_outline"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btn_save_category"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:text="Guardar"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_gradient"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>