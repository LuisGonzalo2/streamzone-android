<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_gradient_background">

    <!-- ScrollView con contenido -->
    <ScrollView
        android:id="@+id/edit_profile_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="â†"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_outline" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Editar Perfil"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

            </LinearLayout>

            <!-- Avatar -->
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_purple_gradient"
                android:gravity="center"
                android:text="ðŸ‘¤"
                android:textSize="40sp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- SECCIÃ“N: InformaciÃ³n Personal -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/dark_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ InformaciÃ³n Personal"
                        android:textColor="@color/purple_accent"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Nombre completo -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre completo"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/et_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/input_bg"
                        android:hint="Ingresa tu nombre"
                        android:textColor="@color/white"
                        android:textColorHint="@color/text_secondary"
                        android:paddingHorizontal="16dp"
                        android:inputType="textPersonName"
                        android:layout_marginBottom="16dp" />

                    <!-- PaÃ­s -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PaÃ­s"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinner_country"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/input_bg"
                        android:paddingHorizontal="12dp"
                        android:layout_marginBottom="16dp" />

                    <!-- TelÃ©fono -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TelÃ©fono"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tv_country_code"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/input_bg"
                            android:text="+593"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:paddingHorizontal="16dp"
                            android:layout_marginEnd="8dp" />

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/input_bg"
                            android:hint="NÃºmero de telÃ©fono"
                            android:textColor="@color/white"
                            android:textColorHint="@color/text_secondary"
                            android:paddingHorizontal="16dp"
                            android:inputType="phone"
                            android:maxLength="10" />

                    </LinearLayout>

                    <!-- Email (no editable) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email (no se puede cambiar)"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_email_display"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/input_bg_disabled"
                        android:text="usuario@email.com"
                        android:textColor="#94A3B8"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- BotÃ³n expandible: Cambiar ContraseÃ±a -->
            <Button
                android:id="@+id/btn_toggle_change_password"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ”’ Cambiar ContraseÃ±a"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/btn_outline"
                android:layout_marginBottom="8dp"
                android:textAllCaps="false" />

            <!-- SECCIÃ“N: Cambiar ContraseÃ±a (COLAPSABLE) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/dark_card_background"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Nueva contraseÃ±a -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nueva contraseÃ±a"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_new_password"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:boxBackgroundMode="filled"
                            app:boxBackgroundColor="@color/input_background"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_new_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="MÃ­nimo 6 caracteres"
                                android:textColor="@color/text_primary"
                                android:textColorHint="@color/text_hint"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="16dp"
                                android:inputType="textPassword" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_toggle_new_password"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:icon="@drawable/ic_visibility"
                            app:iconTint="@color/text_secondary"
                            app:backgroundTint="@color/input_background"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                    <!-- Confirmar nueva contraseÃ±a -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirmar nueva contraseÃ±a"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_confirm_password"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:boxBackgroundMode="filled"
                            app:boxBackgroundColor="@color/input_background"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_confirm_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Repite tu nueva contraseÃ±a"
                                android:textColor="@color/text_primary"
                                android:textColorHint="@color/text_hint"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="16dp"
                                android:inputType="textPassword" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_toggle_confirm_password"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:icon="@drawable/ic_visibility"
                            app:iconTint="@color/text_secondary"
                            app:backgroundTint="@color/input_background"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- SECCIÃ“N: Confirmar con contraseÃ±a actual -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#2D1B4E">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš ï¸ Para aplicar cambios"
                        android:textColor="#F59E0B"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingresa tu contraseÃ±a actual para confirmar los cambios"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_current_password"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:boxBackgroundMode="filled"
                            app:boxBackgroundColor="@color/input_background"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_current_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="ContraseÃ±a actual"
                                android:textColor="@color/text_primary"
                                android:textColorHint="@color/text_hint"
                                android:paddingHorizontal="16dp"
                                android:paddingVertical="16dp"
                                android:inputType="textPassword" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_toggle_current_password"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:icon="@drawable/ic_visibility"
                            app:iconTint="@color/text_secondary"
                            app:backgroundTint="@color/input_background"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- BotÃ³n Guardar Cambios -->
            <Button
                android:id="@+id/btn_save_changes"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ’¾ Guardar Cambios"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/btn_gradient"
                android:layout_marginBottom="80dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>