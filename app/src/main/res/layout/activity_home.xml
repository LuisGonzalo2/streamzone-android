<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_card_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hero -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTituloHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="StreamZone"
                    android:textColor="@color/white"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSubtituloHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tus plataformas favoritas, al mejor precio"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <Button
                        android:id="@+id/btnIniciarSesionHero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Iniciar Sesión"
                        android:backgroundTint="@color/purple_500"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btnVerCombosHero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Ver Combos"
                        android:backgroundTint="@color/teal_700"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

            <!-- Right visual placeholder -->
            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/black_overlay">

                <!-- Aquí podrías poner una imagen o composición similar a la web -->
            </FrameLayout>

        </LinearLayout>

        <!-- Catalog title -->
        <TextView
            android:id="@+id/txtCatalogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuestro Catálogo"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- RecyclerView catálogo -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCatalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />

        <!-- Botón existente para ver registros -->
        <Button
            android:id="@+id/btnVerRegistros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Ver Registros Guardados"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
