<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/dark_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ===== HERO SECTION ===== -->
        <LinearLayout
            android:id="@+id/layoutHero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_hero_gradient"
            android:orientation="vertical"
            android:padding="@dimen/hero_padding"
            android:paddingTop="@dimen/hero_vertical_padding"
            android:paddingBottom="@dimen/hero_vertical_padding">

            <!-- Badge "Entretenimiento Premium" -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_badge_premium"
                android:paddingStart="@dimen/badge_premium_padding_horizontal"
                android:paddingEnd="@dimen/badge_premium_padding_horizontal"
                android:paddingTop="@dimen/badge_premium_padding_vertical"
                android:paddingBottom="@dimen/badge_premium_padding_vertical"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/badge_premium_icon"
                    android:textSize="@dimen/badge_premium_icon_size"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/badge_premium_text"
                    android:textSize="@dimen/badge_premium_text_size"
                    android:textColor="@color/badge_premium_text"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Título "StreamZone" -->
            <TextView
                android:id="@+id/txtHeroTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hero_title"
                android:textSize="@dimen/hero_title_size"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:layout_marginBottom="8dp"
                tools:text="StreamZone" />

            <!-- Saludo "Bienvenido, {nombre}" -->
            <TextView
                android:id="@+id/txtHeroGreeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/hero_greeting_size"
                android:textColor="@color/blue_500"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Bienvenido, Juan Pérez" />

            <!-- Subtítulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hero_subtitle"
                android:textSize="@dimen/hero_subtitle_size"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <!-- Descripción -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hero_description"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Botón "Ver Catálogo" (visible si está logueado) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewCatalog"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btn_view_catalog"
                    android:textSize="@dimen/button_hero_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/button_hero_padding_vertical"
                    android:paddingBottom="@dimen/button_hero_padding_vertical"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_button_catalog"
                    app:cornerRadius="@dimen/button_hero_corner_radius"
                    android:textAllCaps="false"
                    android:layout_marginEnd="@dimen/button_spacing"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <!-- Botón "Iniciar Sesión" (visible si NO está logueado) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLoginHero"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btn_login_hero"
                    android:textSize="@dimen/button_hero_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/button_hero_padding_vertical"
                    android:paddingBottom="@dimen/button_hero_padding_vertical"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_button_catalog"
                    app:cornerRadius="@dimen/button_hero_corner_radius"
                    android:textAllCaps="false"
                    android:layout_marginEnd="@dimen/button_spacing"
                    android:visibility="visible"
                    tools:visibility="gone" />

                <!-- Botón "Ver Combos" -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewCombos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btn_view_combos"
                    android:textSize="@dimen/button_hero_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/purple_600"
                    android:paddingTop="@dimen/button_hero_padding_vertical"
                    android:paddingBottom="@dimen/button_hero_padding_vertical"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_button_combos"
                    app:cornerRadius="@dimen/button_hero_corner_radius"
                    android:textAllCaps="false" />

            </LinearLayout>

            <!-- Stats (500+, 24/7, 100%) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Stat 1: Clientes -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_clients_value"
                        android:textSize="@dimen/stats_value_size"
                        android:textColor="@color/blue_500"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_clients_label"
                        android:textSize="@dimen/stats_label_size"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <!-- Stat 2: Soporte -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_support_value"
                        android:textSize="@dimen/stats_value_size"
                        android:textColor="@color/purple_500_custom"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_support_label"
                        android:textSize="@dimen/stats_label_size"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <!-- Stat 3: Garantía -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_guarantee_value"
                        android:textSize="@dimen/stats_value_size"
                        android:textColor="@color/emerald_500"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_guarantee_label"
                        android:textSize="@dimen/stats_label_size"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- ===== CATÁLOGO SECTION ===== -->
        <LinearLayout
            android:id="@+id/layoutCatalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_catalog_section"
            android:padding="@dimen/margin_large"
            android:layout_margin="@dimen/margin_medium">

            <!-- Título de la sección -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/catalog_title"
                android:textSize="@dimen/section_title_size"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Subtítulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/catalog_subtitle"
                android:textSize="@dimen/section_subtitle_size"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- RecyclerView de servicios -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_service_card"
                tools:itemCount="4" />

        </LinearLayout>

        <!-- ===== FOOTER ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_footer"
            android:padding="@dimen/footer_padding"
            android:gravity="center"
            android:layout_margin="@dimen/margin_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/footer_copyright"
                android:textSize="@dimen/footer_text_size"
                android:textColor="@color/text_secondary"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>