<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_gradient_background"
    tools:context=".HomeActivity">

    <!-- Tarjeta principal -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        app:cardBackgroundColor="@color/dark_card_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- Indicador verde -->
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/circle_green_indicator"
                android:layout_gravity="end" />

            <!-- Logo -->
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/circle_purple_gradient"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="36sp" />

            </LinearLayout>

            <!-- T铆tulo de bienvenida -->
            <TextView
                android:id="@+id/txtTituloHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido"
                android:textSize="24sp"
                android:textColor="@color/purple_accent"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <!-- Email del usuario -->
            <TextView
                android:id="@+id/txtSubtituloHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="usuario@correo.com"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <!-- Estado de conexi贸n -->
            <TextView
                android:id="@+id/txtEstadoConexion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Conectado"
                android:textSize="12sp"
                android:textColor="@color/green_accent"
                android:layout_marginBottom="32dp"
                android:padding="8dp"
                android:background="@drawable/button_gradient_green"
                android:backgroundTint="#1A10B981" />

            <!-- Descripci贸n -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu plataforma de streaming favorita"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="32dp"
                android:gravity="center" />

            <!-- Bot贸n Sincronizar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSincronizar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:text=" Sincronizar datos"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:backgroundTint="@null"
                android:background="@drawable/button_gradient_blue"
                app:cornerRadius="28dp"
                android:textAllCaps="false" />

            <!-- Bot贸n Cerrar Sesi贸n -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text=" Cerrar sesi贸n"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                app:backgroundTint="@color/input_background"
                app:cornerRadius="28dp"
                android:textAllCaps="false" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>