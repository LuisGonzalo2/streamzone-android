<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top bar (jere) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logo_short"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/rounded_circle"
                android:padding="8dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brand_name"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnTopInicio"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/btn_inicio"
                android:background="@drawable/btn_outline"
                android:textColor="#C9B7FF"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnTopLogin"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/btn_login"
                android:background="@drawable/btn_gradient"
                android:textColor="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Saludo -->
        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingTop="8dp"
            android:paddingBottom="12dp" />

        <!-- Hero: título, subtítulo y CTA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_bg"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvAppTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brand_name"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/brand_purple" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hero_subtitle"
                android:textSize="14sp"
                android:textColor="#BFC6D3"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hero_desc"
                android:textSize="12sp"
                android:textColor="#95A0B0"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:weightSum="2"
                android:baselineAligned="false">

                <Button
                    android:id="@+id/btnViewCatalog"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_view_catalog"
                    android:background="@drawable/btn_gradient"
                    android:textColor="@color/white"
                    android:padding="12dp" />

                <Button
                    android:id="@+id/btnViewCombos"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/btn_view_combos"
                    android:background="@drawable/btn_outline"
                    android:textColor="#C9B7FF"
                    android:padding="12dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Stats row (jere) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="12dp"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/stat_customers" android:textColor="@color/brand_blue" android:textStyle="bold"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/stat_customers_label" android:textColor="#94A3B8" android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/stat_support" android:textColor="#9333EA" android:textStyle="bold"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/stat_support_label" android:textColor="#94A3B8" android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/stat_guarantee" android:textColor="#10B981" android:textStyle="bold"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/stat_guarantee_label" android:textColor="#94A3B8" android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Hero illustration simplified: floating icons inside a rounded box -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="12dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_bg" />

            <!-- Floating icons (visual) -->
            <View
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                android:backgroundTint="#3B82F6"
                android:background="@drawable/rounded_square"
                android:layout_gravity="top|start" />

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="18dp"
                android:backgroundTint="#9333EA"
                android:background="@drawable/rounded_square"
                android:layout_gravity="top|end" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:backgroundTint="#10B981"
                android:background="@drawable/rounded_square"
                android:layout_gravity="bottom|start" />

            <View
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="22dp"
                android:backgroundTint="#EC4899"
                android:background="@drawable/rounded_square"
                android:layout_gravity="bottom|end" />

            <!-- Central sparkle icon (placeholder) -->
            <TextView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_circle"
                android:text="@string/sparkle"
                android:textSize="28sp"
                android:gravity="center"
                android:textColor="@color/white" />
        </FrameLayout>

        <!-- Catálogo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/services_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvServices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            android:paddingBottom="24dp" />

        <!-- Métodos de Pago (simplificado) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="@drawable/card_bg">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/payment_methods" android:textColor="@color/white" android:textStyle="bold"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="8dp">
                <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="@string/payment_banks" android:textColor="#C9D6FF" android:padding="8dp" />
                <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="@string/payment_paypal" android:textColor="#C9D6FF" android:padding="8dp" />
                <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="@string/payment_mobile" android:textColor="#C9D6FF" android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="24dp">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/copyright" android:textColor="#94A3B8" android:textSize="12sp" android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
