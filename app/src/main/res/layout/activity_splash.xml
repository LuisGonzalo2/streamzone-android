<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_gradient_background">

    <!-- Contenedor central -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo circular con gradiente (igual que en login) -->
        <LinearLayout
            android:id="@+id/logo_container"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/circle_purple_gradient"
            android:gravity="center"
            android:layout_marginBottom="32dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš€"
                android:textSize="56sp" />
        </LinearLayout>

        <!-- Nombre de la app -->
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StreamZone"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <!-- SubtÃ­tulo -->
        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu entretenimiento, tu zona"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:alpha="0.8" />

    </LinearLayout>

    <!-- Indicador verde (planeta pequeÃ±o) - decorativo -->
    <View
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/circle_green_indicator"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>