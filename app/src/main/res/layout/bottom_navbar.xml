<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    app:cardCornerRadius="24dp"
    app:cardElevation="24dp"
    app:cardBackgroundColor="#CC1E293B"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:weightSum="4">

        <!-- Bot贸n Inicio -->
        <LinearLayout
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp">

                <ImageView
                    android:id="@+id/icon_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_home_outline"
                    android:contentDescription="Inicio"
                    app:tint="@color/text_secondary" />

            </FrameLayout>

            <TextView
                android:id="@+id/label_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

            <View
                android:id="@+id/indicator_home"
                android:layout_width="24dp"
                android:layout_height="3dp"
                android:background="@drawable/navbar_indicator"
                android:layout_marginTop="4dp"
                android:visibility="invisible" />

        </LinearLayout>

        <!-- Bot贸n Mis Compras -->
        <LinearLayout
            android:id="@+id/btn_purchases"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp">

                <ImageView
                    android:id="@+id/icon_purchases"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_shopping_outline"
                    android:contentDescription="Mis Compras"
                    app:tint="@color/text_secondary" />

            </FrameLayout>

            <TextView
                android:id="@+id/label_purchases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compras"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

            <View
                android:id="@+id/indicator_purchases"
                android:layout_width="24dp"
                android:layout_height="3dp"
                android:background="@drawable/navbar_indicator"
                android:layout_marginTop="4dp"
                android:visibility="invisible" />

        </LinearLayout>

        <!-- Bot贸n Notificaciones -->
        <LinearLayout
            android:id="@+id/btn_notifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp">

                <ImageView
                    android:id="@+id/icon_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_notifications_outline"
                    android:contentDescription="Notificaciones"
                    app:tint="@color/text_secondary" />

                <!-- Badge de notificaciones -->
                <TextView
                    android:id="@+id/badge_notifications"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="top|end"
                    android:background="@drawable/badge_background"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:id="@+id/label_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notif"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

            <View
                android:id="@+id/indicator_notifications"
                android:layout_width="24dp"
                android:layout_height="3dp"
                android:background="@drawable/navbar_indicator"
                android:layout_marginTop="4dp"
                android:visibility="invisible" />

        </LinearLayout>

        <!-- Bot贸n Perfil -->
        <LinearLayout
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp">

                <!-- Imagen de perfil circular -->
                <ImageView
                    android:id="@+id/icon_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile_outline"
                    android:contentDescription="Perfil"
                    app:tint="@color/text_secondary" />

            </FrameLayout>

            <TextView
                android:id="@+id/label_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

            <View
                android:id="@+id/indicator_profile"
                android:layout_width="24dp"
                android:layout_height="3dp"
                android:background="@drawable/navbar_indicator"
                android:layout_marginTop="4dp"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>