<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/navbar_background_spotify"
    android:orientation="horizontal"
    android:elevation="8dp"
    android:paddingHorizontal="8dp"
    android:paddingVertical="8dp"
    android:gravity="center"
    android:weightSum="4">

    <!-- Bot贸n Inicio -->
    <LinearLayout
        android:id="@+id/btn_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="24dp">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_home_outline"
                android:contentDescription="Inicio"
                app:tint="@color/navbar_inactive" />

        </FrameLayout>

        <TextView
            android:id="@+id/label_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:textSize="10sp"
            android:textColor="@color/navbar_inactive"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Bot贸n Mis Compras -->
    <LinearLayout
        android:id="@+id/btn_purchases"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="24dp">

            <ImageView
                android:id="@+id/icon_purchases"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_shopping_outline"
                android:contentDescription="Mis Compras"
                app:tint="@color/navbar_inactive" />

        </FrameLayout>

        <TextView
            android:id="@+id/label_purchases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compras"
            android:textSize="10sp"
            android:textColor="@color/navbar_inactive"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Bot贸n Notificaciones -->
    <LinearLayout
        android:id="@+id/btn_notifications"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="24dp">

            <ImageView
                android:id="@+id/icon_notifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_notifications_outline"
                android:contentDescription="Notificaciones"
                app:tint="@color/navbar_inactive" />

            <!-- Badge de notificaciones -->
            <TextView
                android:id="@+id/badge_notifications"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="-4dp"
                android:layout_marginEnd="-4dp"
                android:background="@drawable/badge_background_spotify"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/label_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notif"
            android:textSize="10sp"
            android:textColor="@color/navbar_inactive"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Bot贸n Perfil -->
    <LinearLayout
        android:id="@+id/btn_profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="24dp"
            android:layout_height="24dp">

            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_profile_outline"
                android:contentDescription="Perfil"
                app:tint="@color/navbar_inactive" />

        </FrameLayout>

        <TextView
            android:id="@+id/label_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:textSize="10sp"
            android:textColor="@color/navbar_inactive"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</LinearLayout>