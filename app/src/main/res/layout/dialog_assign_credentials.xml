<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/bg_dark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asignar Credenciales"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvPurchaseInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compra de Netflix Premium por Juan Pérez"
        android:textSize="14sp"
        android:textColor="#B0B0B0"
        android:layout_marginBottom="16dp" />

    <!-- Email de la cuenta -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email de la cuenta"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etCredentialEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="usuario@servicio.com"
        android:textColorHint="#808080"
        android:textColor="@color/white"
        android:background="@drawable/bg_card_rounded"
        android:padding="12dp"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp" />

    <!-- Contraseña -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etCredentialPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Contraseña de la cuenta"
        android:textColorHint="#808080"
        android:textColor="@color/white"
        android:background="@drawable/bg_card_rounded"
        android:padding="12dp"
        android:inputType="textPassword"
        android:layout_marginBottom="24dp" />

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:backgroundTint="#2C2C2E"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Guardar"
            android:textAllCaps="false"
            android:backgroundTint="#10B981"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>