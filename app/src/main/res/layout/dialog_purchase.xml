<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:fillViewport="true"
    android:background="@color/bg_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: title + close -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/tvDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/completar_compra"
                style="@style/DialogTitle"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btnClose"
                android:layout_marginEnd="8dp"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="@color/white"
                android:contentDescription="@string/cerrar" />

        </RelativeLayout>

        <!-- Service card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/bg_card_rounded"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivServiceLogo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="6dp"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:background="@drawable/rounded_square"
                android:src="@null"
                android:contentDescription="@string/logo_servicio"
                app:tint="@null" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/tvServiceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_title_example"
                    style="@style/DialogServiceName" />

                <TextView
                    android:id="@+id/tvServicePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_price_example"
                    style="@style/DialogServicePrice"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Duración -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duracion"
            style="@style/Purchase.SectionHeader"
            android:layout_marginTop="14dp" />

        <LinearLayout
            android:id="@+id/llDurations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="4">

            <Button
                android:id="@+id/btnDuration1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="@string/mes_1"
                style="@style/Purchase.Chip"
                android:textAllCaps="false"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/btnDuration2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="@string/mes_2"
                style="@style/Purchase.Chip"
                android:textAllCaps="false"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/btnDuration3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="@string/mes_3"
                style="@style/Purchase.Chip"
                android:textAllCaps="false"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/btnDuration4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="@string/mes_6"
                style="@style/Purchase.Chip"
                android:textAllCaps="false" />

        </LinearLayout>

        <!-- Número de dispositivos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/numero_dispositivos"
            style="@style/Purchase.SectionHeader"
            android:layout_marginTop="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
             android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnDeviceMinus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/menos"
                style="@style/Purchase.Chip" />

            <TextView
                android:id="@+id/tvDeviceCount"
                android:layout_width="64dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_gradient_button"
                android:text="@string/dispositivo_uno"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:lines="2"
                android:textAlignment="center"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp" />

            <Button
                android:id="@+id/btnDevicePlus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="@string/mas"
                style="@style/Purchase.Chip" />

        </LinearLayout>

        <!-- Información de pago (grid) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/informacion_pago"
            style="@style/Purchase.SectionHeader"
            android:layout_marginTop="14dp" />

        <!-- Row 1: two compact cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/paymentCard1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/payment_card_gradient"
                android:layout_marginEnd="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivPayment1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/banco_pichincha"
                        android:background="@drawable/rounded_circle"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_bank"
                        app:tint="@null"
                        android:visibility="visible" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/banco_pichincha"
                         android:textColor="@color/white"
                         android:textStyle="bold"
                         android:textSize="14sp" />

                 </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titular_pichincha"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cuenta_pichincha"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tipo_ahorro_transaccional"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/paymentCard2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/payment_card_gradient"
                android:layout_marginStart="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivPayment2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/banco_guayaquil"
                        android:background="@drawable/rounded_circle"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_bank"
                        app:tint="@null"
                        android:visibility="visible" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/banco_guayaquil"
                         android:textColor="@color/white"
                         android:textStyle="bold"
                         android:textSize="14sp" />

                 </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titular_guayaquil"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cuenta_guayaquil"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tipo_ahorro"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Row 2: two compact cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/paymentCard3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/payment_card_gradient"
                android:layout_marginEnd="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivPayment3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/banco_pacifico"
                        android:background="@drawable/rounded_circle"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_bank"
                        app:tint="@null"
                        android:visibility="visible" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/banco_pacifico"
                         android:textColor="@color/white"
                         android:textStyle="bold"
                         android:textSize="14sp" />

                 </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titular_pacifico"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cuenta_pacifico"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tipo_ahorro"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/paymentCard4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/payment_card_gradient"
                android:layout_marginStart="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivPayment4"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/paypal_label"
                        android:background="@drawable/rounded_circle"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_bill"
                        app:tint="@null"
                        android:visibility="visible" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/paypal_label"
                         android:textColor="@color/white"
                         android:textStyle="bold"
                         android:textSize="14sp" />

                 </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email_paypal"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/metodo_paypal"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tipo_transferencia"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Instrucciones importantes (mejorada) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- Card exterior con borde destacado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/important_box"
                android:paddingTop="36dp"
                android:paddingBottom="14dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <!-- Título - sección compacta -->
                <TextView
                    android:id="@+id/tvImportantTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/instrucciones_importantes"
                    android:textColor="@color/orange_500"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Caja interna oscura con sombra (tarjeta) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_rounded"
                    android:padding="16dp"
                    android:elevation="2dp">

                    <!-- Texto principal con mejor formato -->
                    <TextView
                        android:id="@+id/tvImportantText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/texto_instrucciones"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="10dp" />

                    <!-- Lista de pasos (viñetas simples) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp">

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:background="@color/orange_500"
                                android:layout_marginEnd="8dp"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/instruction_bullet_1"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="6dp">

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:background="@color/orange_500"
                                android:layout_marginEnd="8dp"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/instruction_bullet_2"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="6dp"
                                android:layout_height="6dp"
                                android:background="@color/orange_500"
                                android:layout_marginEnd="8dp"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/instruction_bullet_3"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Botones eliminados por petición (WhatsApp / Agentes) -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#2A2A2A"
                        android:layout_marginBottom="10dp" />

                    <!-- Pie con icono y énfasis en 'NO' mejorado -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_siren"
                            android:contentDescription="@null"
                            app:tint="@color/warning"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/footer_prefix"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvImportantFooterNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/footer_no"
                            android:textColor="@color/warning"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_marginStart="6dp"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/footer_suffix"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Icono superpuesto eliminado por petición -->

        </FrameLayout>

        <!-- Total a pagar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/bg_card_rounded"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTotalLabel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/total_a_pagar"
                style="@style/Purchase.TotalText" />

            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/precio_ejemplo"
                style="@style/Purchase.TotalAmount" />

        </LinearLayout>

        <!-- Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="@string/cancelar"
                android:background="@drawable/bg_card_rounded"
                style="@style/DialogButtonText" />

            <Button
                android:id="@+id/btnComplete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="@string/completar_compra"
                android:layout_marginStart="10dp"
                style="@style/Purchase.ButtonPrimary" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
