<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#1C1C1E"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Usuario + Estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juan Pérez"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="juan@email.com"
                    android:textSize="13sp"
                    android:textColor="#B0B0B0"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvPurchaseStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏳ Pendiente"
                android:textSize="12sp"
                android:textColor="#F59E0B"
                android:background="#F59E0B20"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <!-- Servicio -->
        <TextView
            android:id="@+id/tvServiceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Netflix Premium"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp" />

        <!-- Precio y duración -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="US$ 4,00"
                android:textSize="14sp"
                android:textColor="#10B981"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • "
                android:textSize="14sp"
                android:textColor="#B0B0B0" />

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 mes"
                android:textSize="14sp"
                android:textColor="#B0B0B0" />

        </LinearLayout>

        <!-- Fecha de compra -->
        <TextView
            android:id="@+id/tvPurchaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comprado: 15 Nov 2025"
            android:textSize="12sp"
            android:textColor="#B0B0B0"
            android:layout_marginBottom="12dp" />

        <!-- Botón asignar credenciales (solo para pendientes) -->
        <Button
            android:id="@+id/btnAssignCredentials"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="✍️ Asignar Credenciales"
            android:textAllCaps="false"
            android:backgroundTint="#3B82F6"
            android:textColor="@color/white"
            android:visibility="visible" />

        <!-- Credenciales asignadas (solo para activas) -->
        <LinearLayout
            android:id="@+id/llCredentials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#2C2C2E"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credenciales"
                android:textSize="12sp"
                android:textColor="#B0B0B0"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textSize="13sp"
                    android:textColor="#B0B0B0" />

                <TextView
                    android:id="@+id/tvCredentialEmail"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="cuenta@netflix.com"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pass: "
                    android:textSize="13sp"
                    android:textColor="#B0B0B0" />

                <TextView
                    android:id="@+id/tvCredentialPassword"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="********"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>