<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:id="@+id/category_preview_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con emoji y acciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_category_icon_preview"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="ðŸ“º"
                android:textSize="32sp"
                android:gravity="center"
                android:background="@drawable/rounded_circle"
                android:backgroundTint="#33FFFFFF" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tv_category_name_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Streaming"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_category_service_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 servicios"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_delete_category"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/white"
                android:contentDescription="Eliminar" />

        </LinearLayout>

        <!-- DescripciÃ³n -->
        <TextView
            android:id="@+id/tv_category_description_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Netflix, Disney+, Max y mÃ¡s"
            android:textColor="#E0E0E0"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Divisor -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginBottom="12dp" />

        <!-- Footer con switch y botÃ³n editar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_category_active"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Activa"
                android:textColor="@color/white"
                android:checked="true"
                app:thumbTint="@color/white"
                app:trackTint="@color/purple_accent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_category"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Editar"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:backgroundTint="@color/purple_accent"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>