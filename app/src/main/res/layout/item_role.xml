<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#1E293B">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icono -->
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="ðŸŽ­"
            android:textSize="32sp"
            android:gravity="center"
            android:background="@drawable/rounded_circle"
            android:layout_marginEnd="12dp" />

        <!-- Info del rol -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_role_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestor de Compras"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_role_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puede asignar credenciales"
                android:textColor="#94A3B8"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_role_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ… Activo"
                android:textSize="11sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Botones de acciÃ³n -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_edit_role"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Editar"
                app:tint="@color/brand_blue" />

            <ImageButton
                android:id="@+id/btn_delete_role"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Eliminar"
                app:tint="@color/close_red" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>