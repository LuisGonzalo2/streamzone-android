<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="14dp"
    card_view:cardElevation="10dp"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardUseCompatPadding="false"
    card_view:cardPreventCornerOverlap="false"
    android:background="@android:color/transparent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- top accent (pequeño degradado decorativo) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_gravity="top"
            android:background="@drawable/top_accent" />

        <!-- Badge superior derecho -->
        <TextView
            android:id="@+id/tvBadge"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#10B981"
            android:background="@drawable/rounded_circle"
            android:gravity="center"
            android:text="@string/badge_check"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="@drawable/card_bg"
            android:clipToPadding="false">

            <!-- Contenido centrado (icono, título, precio, acceso inmediato) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="8dp">

                <!-- Icono circular/rounded-square centrado -->
                <TextView
                    android:id="@+id/tvServiceIcon"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/rounded_square"
                    android:gravity="center"
                    android:text="@string/service_icon"
                    android:textSize="28sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <!-- Título centrado -->
                <TextView
                    android:id="@+id/tvServiceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/service_title_example"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <!-- Price pill centrada -->
                <TextView
                    android:id="@+id/tvServicePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/price_pill"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/service_price_example"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <!-- Small green pill -->
                <TextView
                    android:id="@+id/tvQuickAccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/button_gradient_green"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/quick_access"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- CTA grande degradado -->
            <Button
                android:id="@+id/btnReserve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/btn_buy"
                android:background="@drawable/btn_gradient"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAllCaps="false" />

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>
