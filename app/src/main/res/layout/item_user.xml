<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#1C1C1E"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juan PÃ©rez"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="juan@email.com"
                    android:textSize="13sp"
                    android:textColor="#B0B0B0"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvAdminBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‘‘ Admin"
                android:textSize="12sp"
                android:textColor="#F59E0B"
                android:background="#F59E0B20"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Phone -->
        <TextView
            android:id="@+id/tvUserPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž +593 999 999 999"
            android:textSize="13sp"
            android:textColor="#B0B0B0"
            android:layout_marginBottom="12dp" />

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnToggleAdmin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:text="Hacer Admin"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:backgroundTint="#3B82F6"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnManageRoles"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="36dp"
                android:text="Gestionar Roles"
                android:textAllCaps="false"
                android:textSize="13sp"
                android:backgroundTint="#8B5CF6"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>